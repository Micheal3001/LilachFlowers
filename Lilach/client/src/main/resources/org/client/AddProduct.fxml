<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.client.AddProductController">
    <children>
        <ImageView fx:id="mainImage" fitHeight="290.0" fitWidth="290.0" layoutX="63.0" layoutY="36.0" pickOnBounds="true" />

        <Label layoutX="408.0" layoutY="14.0" text="Name:">
            <font><Font size="13.0" /></font>
        </Label>
        <TextField fx:id="nameText" layoutX="407.0" layoutY="34.0" prefHeight="26.0" prefWidth="234.0" promptText="Add name" />

        <Label layoutX="408.0" layoutY="64.0" text="Catalog Number:">
            <font><Font size="13.0" /></font>
        </Label>
        <TextField fx:id="catalogText" layoutX="407.0" layoutY="84.0" prefHeight="26.0" prefWidth="234.0" promptText="Catalog number" />

        <Label layoutX="408.0" layoutY="114.0" text="Description:">
            <font><Font size="13.0" /></font>
        </Label>
        <TextArea fx:id="descriptionText" layoutX="407.0" layoutY="134.0" prefHeight="70.0" prefWidth="234.0" promptText="Add description:" />

        <Label layoutX="408.0" layoutY="214.0" text="Product:">
            <font><Font size="13.0" /></font>
        </Label>
        <ComboBox fx:id="productTypeBox" layoutX="407.0" layoutY="234.0" prefHeight="26.0" prefWidth="113.0" onAction="#openColor" style="-fx-background-color: FFD6BA;" />

        <Label layoutX="528.0" layoutY="214.0" text="Color:">
            <font><Font size="13.0" /></font>
        </Label>
        <ComboBox fx:id="colorBox" layoutX="527.0" layoutY="234.0" prefHeight="26.0" prefWidth="113.0" style="-fx-background-color: FFD6BA;" />

        <Label layoutX="408.0" layoutY="274.0" text="Price:">
            <font><Font size="13.0" /></font>
        </Label>
        <TextField fx:id="priceText" layoutX="407.0" layoutY="294.0" prefHeight="26.0" prefWidth="113.0" promptText="Price" />

        <Label layoutX="528.0" layoutY="274.0" text="Discount: (optional)">
            <font><Font size="13.0" /></font>
        </Label>
        <TextField fx:id="discountText" layoutX="527.0" layoutY="294.0" prefHeight="26.0" prefWidth="113.0" promptText="Discount" />

        <Button fx:id="addImageBtn" layoutX="147.0" layoutY="350.0" onAction="#addImage" prefHeight="30.0" prefWidth="123.0" style="-fx-background-color: FFD6BA;" text="Add image" />

        <Button fx:id="saveBtn" layoutX="407.0" layoutY="340.0" onAction="#clickedAdd" prefHeight="30.0" prefWidth="234.0" style="-fx-background-color: FFD6BA;" text="add product" />
    </children>
</AnchorPane>
