<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="371.0" prefWidth="659.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.client.ProductViewController">
    <children>
        <ImageView fx:id="mainImage" fitHeight="274.0" fitWidth="286.0" layoutX="101.0" layoutY="50.0"
                   pickOnBounds="true"/>
        <ImageView fx:id="image1" fitHeight="53.0" fitWidth="57.0" layoutX="22.0" layoutY="50.0"
                   onMouseClicked="#changeImage" opacity="0.5" pickOnBounds="true"/>
        <ImageView fx:id="image2" fitHeight="53.0" fitWidth="57.0" layoutX="22.0" layoutY="124.0"
                   onMouseClicked="#changeImage" opacity="0.5" pickOnBounds="true"/>
        <ImageView fx:id="image3" fitHeight="53.0" fitWidth="57.0" layoutX="22.0" layoutY="194.0"
                   onMouseClicked="#changeImage" opacity="0.5" pickOnBounds="true"/>
        <ImageView fx:id="image4" fitHeight="53.0" fitWidth="57.0" layoutX="22.0" layoutY="268.0"
                   onMouseClicked="#changeImage" opacity="0.5" pickOnBounds="true"/>
        <Button fx:id="addToCartBtn" layoutX="405.0" layoutY="292.0" mnemonicParsing="false" onAction="#addToCart"
                prefHeight="26.0" prefWidth="106.0" style="-fx-background-color: #c6acef;" text="add to cart">
            <font>
                <Font name="Cambria" size="15.0"/>
            </font>
        </Button>
        <TextField fx:id="orderCount" alignment="CENTER" layoutX="561.0" layoutY="292.0" prefHeight="30.0"
                   prefWidth="47.0" text="1"/>
        <Button fx:id="plusBtn" contentDisplay="CENTER" layoutX="614.0" layoutY="291.0" mnemonicParsing="false"
                onAction="#plusAction" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #c6acef;"
                text="+"/>
        <Button fx:id="minusBtn" contentDisplay="CENTER" layoutX="526.0" layoutY="291.0" mnemonicParsing="false"
                onAction="#minusAction" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #c6acef;"
                text="-"/>
        <Label fx:id="productName" alignment="CENTER" layoutX="405.0" layoutY="55.0" prefHeight="43.0" prefWidth="237.0"
               text="Label">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Label fx:id="description" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="407.0" layoutY="103.0"
               prefHeight="128.0" prefWidth="238.0" text="description:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Text fx:id="price" layoutX="487.0" layoutY="273.0" strokeType="OUTSIDE" strokeWidth="0.0"
              textAlignment="CENTER" wrappingWidth="78.51947021484375">
            <font>
                <Font size="24.0"/>
            </font>
        </Text>
        <Text fx:id="priceBeforeDiscount" layoutX="459.0" layoutY="268.0" strikethrough="true" strokeType="OUTSIDE"
              strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="57.0"/>
    </children>
</AnchorPane>
